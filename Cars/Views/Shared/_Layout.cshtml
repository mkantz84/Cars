<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        $(document).ready(function () {
            var authid = "@User.Identity.Name"
            if (authid == "") {
                $("#notsigned").show();
            }
            else {
                $("#signed").show();
            }
            var items=localStorage.interests.toString().split(",");
            for (var i = 0; i < items.length; i++) {
                var car = items[i].split(" ");
                $("#ftr").append
                    ('<a href="/Cars/ShowCar?manifacturer=' + car[0] + '&model=' + car[1] + '" class = "btn btn-default btn-sm">' + car[0] + '-' + car[1] + ' </a>   ');
                //$("#ftr").append
                //    ('<a href="/Cars/ShowCar?manifacturer=' + car[0] + '&model=' + car[1] + '" >' + '<input type="button" class="btn btn-group-justified" value="' + car[0] + '-' + car[1] + '" /></a>');

            }
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/cars/index">
                    <img style="max-width:50px; margin-top: -7px" alt="Brand Logo" src="~/Content/themes/base/images/logo.jpg">
                </a>
                @*<a class="navbar-brand" href="/cars/index">TECR</a>*@
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @*<li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>*@
                    <li>
                        <a href="/cars/carslist">CARS</a>
                    </li>
                    <li>
                        <a href="/cars/contact">CONTACT</a>
                    </li>
                </ul>
                @*<form class="navbar-form navbar-left">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>*@


                <ul class="nav navbar-nav navbar-right" id="notsigned" hidden="hidden">
                    <li><a href="/cars/createuser"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                        <div class="dropdown-menu" style="padding: 15px; padding-bottom: 10px;">
                            <form action="/cars/login" class="form-horizontal" method="post" accept-charset="UTF-8">
                                <input id="userName" class="form-control login" style="border-bottom:10px" type="text" name="userName" placeholder="Username.." />
                                <input id="password" class="form-control login" style="padding-bottom:10px" type="password" name="password" placeholder="Password.." />
                                <input class="btn btn-primary" type="submit" name="submit" value="login" />
                            </form>
                        </div>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right" id="signed" hidden="hidden">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <center>
                                Hello @Session["authname"]<br />
                                (@Session["authrole"])
                                <span class="caret"></span>
                            </center>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/cars/purchases">MY PURCHASES</a></li>
                            <li><a href="/cars/workers">WORKERS ACTIONS</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/cars/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer >
            History:
            <p id="ftr"></p>
        </footer>
    </div>
    @*<script src="~/Scripts/jquery-1.12.4.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>*@




</body>
</html>